            <input type="text" id="searchInput" placeholder="Search your channels or playlists...">
        </div>
    </div>

    <main class="main-content">
        <div class="section-header">
            <h2 class="section-title">Library</h2>
            <span id="count" class="badge badge-official">0 Playlists</span>
        </div>
        <div class="playlist-list" id="playlistList">
            </div>
    </main>

    <div class="modal-backdrop" id="backdrop"></div>
    <div class="input-modal" id="modal">
        <h3 style="margin-bottom: 25px; text-align: center;">Add New Playlist</h3>
        <form class="input-form" id="pForm">
            <div class="input-group">
                <label>Playlist Name</label>
                <input type="text" class="input-field" placeholder="Example: My Favorite Sports" id="pName" required>
            </div>
            <div class="input-group">
                <label>M3U URL</label>
                <input type="url" class="input-field" placeholder="https://example.com/list.m3u" id="pUrl">
            </div>
            <div style="text-align: center; color: var(--text-dim); font-size: 0.7rem; margin: 5px 0;">— OR UPLOAD FILE —</div>
            <input type="file" id="pFile" accept=".m3u,.m3u8" style="display: none;">
            <button type="button" class="input-field" onclick="document.getElementById('pFile').click()" id="fileDisplay" style="cursor: pointer; border-style: dashed;">
                <i class="fas fa-cloud-upload-alt"></i> Choose M3U File
            </button>
            <button type="submit" class="submit-btn">SAVE PLAYLIST</button>
        </form>
    </div>

